<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_height"
    android:orientation="horizontal"
    android:weightSum="5"

    >
    <ImageView
        android:id="@+id/image"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="2"
        android:padding="0dp"
        android:scaleType="centerCrop" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/list_height"
        android:layout_gravity="top"
        android:layout_weight="3"
        android:orientation="vertical"
        android:paddingBottom="@dimen/linear_padding"
        android:paddingLeft="@dimen/linear_paddingtop"
        android:paddingRight="@dimen/linear_padding"
        android:paddingTop="@dimen/linear_padding"
        android:background="@color/white">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/purple"
            android:textSize="@dimen/listitem_textsize"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="1"
            android:textColor="@color/purple"
            android:textSize="@dimen/listitem_textsize"
            />
        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/listitem_textsize"
            />


    </LinearLayout>

</LinearLayout>